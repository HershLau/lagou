table
  border-collapse collapse;
  border-spacing 0


th,td
  padding 0


strong
  font-weight 400


em,i
  font-style normal


dl,dt,dd
  margin: 0


:selection
  color #fff;
  background-color #00b38a


::-moz-selection
  color #fff;
  background-color #00b38a


ul,ol
  margin 0;
  padding 0;
  list-style none


.fl
  float left


.fr
